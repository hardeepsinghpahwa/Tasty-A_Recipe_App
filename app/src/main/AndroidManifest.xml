<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pahwa.recipeapp">

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecipeApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.searchScreen.SearchScreen"
            android:exported="false" />
        <activity
            android:name=".ui.dashboardScreen.DashboardScreen"
            android:exported="false" />
        <activity
            android:name=".ui.loginScreen.LoginScreen"
            android:exported="false" />
        <activity
            android:name=".ui.introScreen.IntroScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>